<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YellowTaxi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--        android app header -->
        <item name="colorPrimary">@color/header</item>
        <!--        top android header  -->
        <item name="colorPrimaryVariant">@color/top_android_bar</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/top_android_bar</item>
        <item name="colorSecondaryVariant">@color/top_android_bar</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.YellowTaxi.Fullscreen" parent="Theme.YellowTaxi">
        <item name="android:actionBarStyle">@style/Widget.Theme.YellowTaxi.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.YellowTaxi.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/header</item>
        <item name="fullscreenTextColor">@color/black</item>
    </style>

    <style name="Theme.YellowTaxi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YellowTaxi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YellowTaxi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>